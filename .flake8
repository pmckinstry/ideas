[flake8]
max-line-length = 88
extend-ignore = E203,E501,W503,W504,F401,F403,F405,F811,F812,F821,F822,F823,F831,F841,F901
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .mypy_cache,
    .pytest_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F403,F405,F811,F812,F821,F822,F823,F831,F841,F901
    */tests/*:F401,F403,F405,F811,F812,F821,F822,F823,F831,F841,F901
